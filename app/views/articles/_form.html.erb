<div class="container">
<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    
    <div class="col-sm">
      <div class="card" style="width: auto;">
        <div class="card-body">
          <h4 class="card-title">
        <%= controller.action_name.capitalize %>
        article
        </h4>
            <p class="card-text">

          <div class="form-group">
            <label for="formGroupExampleInput">Title</label>
            <%= form.text_field :title, autofocus: true, :class=> "form-control" %>
          </div>  

          <div class="form-group">
            <label for="formGroupExampleInput">Text</label>
            <%= form.text_area :text, :rows => 10, :class=> "form-control" %>
          </div> 
          <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= link_to 'Back', articles_path %>
    
     <%= form.submit :Submit, class: 'btn btn-outline-primary card-btn-submit' %>

  </div>
</p>
</div>
</div>
</div>
<div class="col-6"></div>
  </div>
<% end %>

</div>